{
	"compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
		"skipLibCheck": true,
		"noImplicitAny": false,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,

		/* alias */
		"baseUrl": ".",
		"outDir": "build",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src", "src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}
